<style>
  /* Animaciones personalizadas */
  @keyframes pulse-slow {
    0%, 100% { 
      transform: translateY(0);
      opacity: 0.2;
    }
    50% { 
      transform: translateY(-10px);
      opacity: 0.3;
    }
  }
  
  .animate-pulse-slow {
    animation: pulse-slow 15s infinite ease-in-out;
  }
</style>