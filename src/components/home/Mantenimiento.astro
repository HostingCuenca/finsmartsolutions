        70% { opacity: 1; }
        80% { opacity: 0.8; }
        100% { opacity: 1; }
    }

    #stars {
        animation: animateStars 50s linear infinite, blink 5s infinite;
    }

    #stars2 {
        animation: animateStars 100s linear infinite, blink 7s infinite 1s;
    }

    #stars3 {
        animation: animateStars 150s linear infinite, blink 9s infinite 2s;
