<style>
    :root {
        --electric-blue: #0066cc;
        --dark-blue: #000c1a;
        --deeper-blue: #00050d;
        --text-color: #ffffff;
    }

    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
    }

    .maintenance-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        font-family: 'Arial', sans-serif;
        overflow: hidden;
        background: linear-gradient(to bottom, var(--dark-blue) 0%, var(--deeper-blue) 100%);
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(ellipse at center, rgba(0, 12, 26, 0) 0%, rgba(0, 5, 13, 0.8) 100%);
        z-index: 2;
    }

    .content {
        position: relative;
        z-index: 3;
        padding: 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        background-color: rgba(0, 12, 26, 0.85);
        border-radius: 8px;
        max-width: 500px;
        width: 90%;
        color: var(--text-color);
        border: 1px solid var(--electric-blue);
        box-shadow: 0 0 20px rgba(0, 102, 204, 0.3);
    }

    .divider {
        width: 60px;
        height: 3px;
        background: var(--electric-blue);
        margin: 1rem 0;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-color);
    }

    h2 {
        font-size: 1.2rem;
        margin: 0 0 1.5rem 0;
        color: var(--text-color);
    }

    p {
        font-size: 1rem;
        margin: 0;
        color: var(--text-color);
    }

    .message {
        padding: 1rem 0;
        width: 100%;
        text-align: center;
    }

    .progress-container {
        width: 80%;
        background-color: rgba(255, 255, 255, 0.1);
        height: 6px;
        border-radius: 3px;
        margin: 1.5rem 0 0.5rem 0;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        width: 70%;
        background: var(--electric-blue);
        border-radius: 3px;
    }

