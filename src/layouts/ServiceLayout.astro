      </div>

      <!-- Imagen de fondo con filtro -->
      <div class="absolute inset-0 z-0">
        <img
            src={service.image}
            alt={service.title}
            class="w-full h-full object-cover opacity-30 mix-blend-overlay"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900/80 to-primary-900/80"></div>
      </div>

      <div class="container relative z-10">
        <div class="max-w-3xl text-white">
          <span class="inline-block px-3 py-1 bg-primary-500/30 backdrop-blur-sm text-primary-200 rounded-full text-sm font-medium mb-4">
            Servicio Financiero
