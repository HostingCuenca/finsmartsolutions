---
import Layout from './Layout.astro';

interface Props {
  title: string;
  description: string;
  service: {
    title: string;
    description: string;
    image: string;
    benefits: string[];
    features: {
      title: string;
      description: string;
      icon: string;
    }[];
  };
}

const { title, description, service } = Astro.props;
---

<Layout {title} {description}>
  <div class="pt-[var(--header-height)]">
    <!-- Hero Section -->
    <section class="relative py-20 bg-gray-900">
      <div class="absolute inset-0 z-0">
        <img 
          src={service.image}
          alt={service.title}
          class="w-full h-full object-cover opacity-20"
        />
      </div>
      <div class="container relative z-10">
        <div class="max-w-3xl text-white">
          <h1 class="text-5xl font-bold mb-6">{service.title}</h1>
          <p class="text-xl text-gray-300">{service.description}</p>
        </div>
      </div>
    </section>

    <!-- Benefits -->
    <section class="py-20 bg-white">
      <div class="container">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Beneficios</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {service.benefits.map(benefit => (
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 rounded-lg bg-primary-50 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
              </div>
              <p class="text-lg text-gray-700">{benefit}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="py-20 bg-gray-50">
      <div class="container">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Características</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {service.features.map(feature => (
            <div class="bg-white p-8 rounded-xl shadow-sm">
              <div class="text-3xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-20 bg-primary-500">
      <div class="container text-center">
        <h2 class="text-3xl font-bold text-white mb-8">¿Necesitas más información?</h2>
        <a href="/contacto" class="btn bg-white text-primary-500 hover:bg-gray-100">
          Contáctanos
        </a>
      </div>
    </section>
  </div>
</Layout>