---
import Layout from './Layout.astro';

interface Props {
  title: string;
  description: string;
  service: {
    title: string;
    description: string;
    image: string;
    benefits: string[];
    features: {
      title: string;
      description: string;
      icon: string;
    }[];
  };
}

const { title, description, service } = Astro.props;
