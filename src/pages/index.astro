<script>
  // Script adicional para asegurar que los usuarios sean redirigidos a la página de mantenimiento
  // Este script es una capa extra de seguridad en caso de que el middleware no esté funcionando
  document.addEventListener('DOMContentLoaded', () => {
    const currentPath = window.location.pathname;
    // Si no estamos en la página de mantenimiento y no estamos cargando recursos
    if (
        !currentPath.includes('mantenimiento') &&
        !currentPath.endsWith('.css') &&
        !currentPath.endsWith('.js') &&
        !currentPath.endsWith('.svg') &&
        !currentPath.endsWith('.png') &&
        !currentPath.endsWith('.jpg') &&
        !currentPath.includes('/assets/')
    ) {
      window.location.href = '/mantenimiento';
    }
  });
</script>



