---
import Layout from '../layouts/Layout.astro';

const title = "Sobre Nosotros";
const description = "Conoce a FINSMARTSOLUTIONS, empresa líder en soluciones financieras inteligentes para empresarios e inversionistas en Ecuador.";

// Valores de la empresa
const valores = [
  {
    title: "Innovación Financiera",
    icon: "rocket",
    description: "Buscamos constantemente nuevas estrategias y herramientas para ofrecer soluciones efectivas y adaptadas a las necesidades de nuestros clientes."
  },
  {
    title: "Educación y Empoderamiento",
    icon: "book-open",
    description: "Creemos que el conocimiento financiero es la base del éxito, por lo que capacitamos y guiamos a nuestros clientes para que tomen decisiones informadas."
  },
  {
    title: "Transparencia y Confianza",
    icon: "handshake",
    description: "Actuamos con honestidad y claridad en cada asesoría, brindando información precisa y confiable para construir relaciones duraderas."
  },
  {
    title: "Crecimiento Sostenible",
    icon: "leaf",
    description: "Promovemos el desarrollo financiero responsable, asegurando que nuestras soluciones beneficien tanto a nuestros clientes como al entorno en el que operamos."
  },
  {
    title: "Orientación al Cliente",
    icon: "target",
    description: "Nos enfocamos en entender las necesidades individuales de cada cliente para ofrecer servicios personalizados y eficaces."
  },
  {
    title: "Excelencia y Compromiso",
    icon: "diamond",
    description: "Nos esforzamos por brindar siempre un servicio de alta calidad, asegurando el éxito y la satisfacción de nuestros clientes."
  }
];

// Servicios principales
const servicios = [
  "Notas de Crédito",
  "Factoring",
  "Crédito",
  "Inversiones",
  "Tributación Contable",
  "Capacitación Financiera"
];
---

<Layout {title} {description}>
  <div class="pt-[var(--header-height)]">
    <!-- Hero Section con imagen de fondo -->
    <section class="relative py-24 bg-gradient-to-r from-gray-900 to-primary-900 overflow-hidden">
      <!-- Patrones decorativos de fondo -->
      <div class="absolute top-0 left-0 w-full h-full opacity-10">
        <div class="absolute top-0 right-0 w-1/3 h-1/2 bg-primary-500 rounded-bl-full opacity-20"></div>
        <div class="absolute bottom-0 left-0 w-1/4 h-1/3 bg-primary-500 rounded-tr-full opacity-20"></div>
      </div>
      
      <!-- Imagen de fondo con filtro -->
      <div class="absolute inset-0 z-0">
        <img 
          src="https://images.unsplash.com/photo-1521791055366-0d553872125f?auto=format&q=80&w=2000"
          alt="Equipo FINSMARTSOLUTIONS"
          class="w-full h-full object-cover opacity-20 mix-blend-overlay"
        />
      </div>
      
      <div class="container relative z-10">
        <div class="max-w-3xl text-white">
